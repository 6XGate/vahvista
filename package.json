{
  "name": "vahvista",
  "version": "1.3.0",
  "description": "Simple composable validation framework",
  "private": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "lint": "eslint src tests webpack.config.cjs",
    "fix": "eslint --fix src tests webpack.config.cjs",
    "dev": "webpack --mode=development",
    "prod": "webpack --mode=production",
    "coverage": "nyc ava",
    "test": "ava",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable && npm run prod",
    "postpublish": "pinst --enable"
  },
  "directories": {
    "lib": "src",
    "test": "tests"
  },
  "repository": "github:6XGate/vahvista",
  "keywords": [
    "javascript",
    "typescript",
    "validation"
  ],
  "author": "Matthew Holder <sixxgate@hotmail.com> (https://www.sleepingcats.org/)",
  "license": "MIT",
  "bugs": "https://github.com/6XGate/vahvista/issues",
  "homepage": "https://github.com/6XGate/vahvista#readme",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist/**/*"
  ],
  "ava": {
    "files": [
      "tests/**/*",
      "!tests/utils"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "esm"
    ],
    "nodeArguments": [
      "--enable-source-maps"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/babel__core": "^7.1.19",
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "ava": "^3.15.0",
    "eslint": "^8.20.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "esm": "^3.2.25",
    "husky": "^8.0.1",
    "load-json-file": "^6.2.0",
    "nyc": "^15.1.0",
    "pinst": "^3.0.0",
    "pkg-dir": "^5.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpackbar": "^5.0.2"
  }
}
