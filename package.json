{
  "name": "vahvista",
  "version": "1.1.1",
  "description": "Simple composable validation framework",
  "private": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "lint": "eslint src tests rolete.config.js",
    "dev": "rolete -c dev",
    "prod": "rolete -c prod",
    "coverage": "nyc ava",
    "test": "ava",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable && npm run prod",
    "postpublish": "pinst --enable"
  },
  "directories": {
    "lib": "src",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/6XGate/vahvista.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "validation"
  ],
  "author": "Matthew Holder (https://www.sleepingcats.org/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/6XGate/vahvista/issues"
  },
  "homepage": "https://github.com/6XGate/vahvista#readme",
  "engines": {
    "node": ">=12.9.0"
  },
  "files": [
    "dist/**/*"
  ],
  "rolete": {
    "input": "src/index.ts",
    "targets": {
      "cjs": "#main",
      "esm": "#module",
      "iife": "dist/index.iife.js"
    },
    "globals": {
      "lodash": "_"
    }
  },
  "ava": {
    "files": [
      "tests/**/*",
      "!tests/utils"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "esm"
    ],
    "nodeArguments": [
      "--enable-source-maps"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@rolete/rolete": "^1.1.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-auto-install": "^2.1.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/babel__core": "^7.1.12",
    "@types/lodash": "^4.14.167",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "ava": "^3.15.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "esm": "^3.2.25",
    "husky": "^5.0.6",
    "nyc": "^15.1.0",
    "pinst": "^2.1.1",
    "rollup": "^2.36.1",
    "rollup-plugin-terser": "^7.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "lodash": "^4.17.20"
  }
}
